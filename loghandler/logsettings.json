{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
	"fancy": {
	    "format": "%(asctime)s - %(name)s - %(funcName)s - %(lineno)d - %(message)s"
		}
    },

    "handlers": {
        "console_debug": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "fancy",
            "stream": "ext://sys.stdout"
        },

        "console_info": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "fancy",
            "stream": "ext://sys.stdout"
        },

        "console_error": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "fancy",
            "stream": "ext://sys.stdout"
        },

        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "fancy",
            "filename": "info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "fancy",
            "filename": "errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "debug_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "fancy",
            "filename": "debug.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "my_module": {
            "level": "DEBUG",
            "handlers": ["console_debug","debug_file_handler"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["console_debug","info_file_handler", "error_file_handler","debug_file_handler"]
    }
}
